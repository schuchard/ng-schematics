{
  "name": "tailwind-schematic",
  "version": "0.1.1",
  "description": "Add tailwind to an Angular project",
  "scripts": {
    "clean:launch": "yarn clean && yarn launch",
    "dev": "yarn build:clean:launch",
    "publish": "yarn build",
    "build": "bash ./scripts/build.sh",
    "clean": "bash ./scripts/clean.sh",
    "build:clean:launch": "yarn build && yarn clean && yarn launch",
    "launch": "bash ./scripts/launch.sh",
    "test": "yarn build:clean:launch && yarn test:sandbox && yarn clean",
    "test:unit": "ava",
    "test:e2e": "bash ./scripts/test-e2e.sh",
    "link:sandbox": "yarn link && cd ../../sandbox/test-workspace && yarn link tailwind-schematic",
    "test:sandbox": "cd ../../sandbox/test-workspace && yarn lint && yarn test && yarn build",
    "release": "np"
  },
  "keywords": [
    "schematics"
  ],
  "author": "Kevin Schuchard",
  "license": "MIT",
  "schematics": "./collection.json",
  "dependencies": {
    "@angular-devkit/core": "8.3.20",
    "@angular-devkit/schematics": "8.3.20",
    "@schuchard/schematics-core": "^0.1.1",
    "rxjs": "6.4.0",
    "typescript": "~3.7.2"
  },
  "devDependencies": {
    "@schematics/angular": "^8.3.20"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "ava": {
    "files": [
      "src/**/*.spec.ts"
    ],
    "compileEnhancements": false,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  }
}
